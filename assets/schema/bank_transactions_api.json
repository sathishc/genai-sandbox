{
  "openapi": "3.0.0",
  "info": {
    "title": "Bank Transactions API",
    "version": "1.0.0",
    "description": "APIs for listing customer transactions, account balances, etc."
  },
  "paths": {
    "/transactions/{all}": {
      "get": {
        "summary": "Gets the list of all transactions",
        "description": "Gets the list of all transactions",
        "operationId": "listAllTransactions",
        "parameters": [
        ],
        "responses": {
          "200": {
            "description": "List of all bank transactions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transactions": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": ["transaction1", "transaction2", "transaction3"],
                      "description": "Gets the list of transactions for a customer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transactions/{customerId}": {
      "get": {
        "summary": "Gets the list of transactions for a specific customer",
        "description": "Gets the list of transactions for a specific customer",
        "operationId": "listTransactionsForCustomer",
        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "description": "Unique ID of the customer for whom we are search the transactions",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of bank transactions for this customer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "TransactionID": {
                        "type": "string",
                        "description": "Unique ID of the Transaction."
                      },
                      "CustomerID": {
                        "type": "string",
                        "description": "Unique ID of the Customer."
                      },
                      "TransactionDate": {
                        "type": "string",
                        "description": "Date of the transaction"
                      },
                      "TransactionAmount (INR)": {
                        "type": "number",
                        "description": "Value of the Transaction"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transactions/{location}": {
      "get": {
        "summary": "Gets the list of transactions for a location",
        "description": "Gets the list of transactions for a location",
        "operationId": "listTransactionsForLocation",
        "parameters": [
          {
            "name": "location",
            "in": "path",
            "description": "Location for which we are searching the transactions",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of bank transactions for this location",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transactions": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": ["transaction1", "transaction2", "transaction3"],
                      "description": "Gets the list of transactions for a location"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transactions/{between_dates}": {
      "get": {
        "summary": "Gets the list of transactions between two dates",
        "description": "Gets the list of transactions between two dates",
        "operationId": "listTransactionsBetweenDates",
        "parameters": [
          {
            "name": "start_date",
            "in": "path",
            "description": "Start date from where to search for a transaction",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "end_date",
            "in": "path",
            "description": "End date below where to search for a transaction",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of bank transactions between start and end dates",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "transactions": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "example": ["transaction1", "transaction2", "transaction3"],
                      "description": "Gets the list of transactions for a location"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/account_balance/{customer_id}": {
      "get": {
        "summary": "Gets the account balance for a specific customer",
        "description": "Gets the account balance for a specific customer",
        "operationId": "getAccountBalanceForCustomer",
        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "description": "Unique ID of the customer for whom we are getting the account balance",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "String responses with account balance",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "123456.789",
                  "description": "the account balance for the customer"
                }
              }
            }
          }
        }
      }
    }    
  }
}
